<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxHeight="400.0" maxWidth="600.0" minHeight="400.0" minWidth="600.0" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.Controllers.Service.TreeOperationsController">
    <children>
        <VBox alignment="CENTER" prefHeight="400.0" prefWidth="600.0" spacing="20.0">
            <!-- Section des boutons centraux -->
            <HBox alignment="CENTER" prefHeight="272.0" prefWidth="600.0" spacing="30.0">
                <children>
                    <Button fx:id="btnAjouter" mnemonicParsing="false" onAction="#onTreeOperationsClick" prefHeight="50.0" prefWidth="200.0" text="Ajouter Arbre" textFill="#0a6d36"
                            translateY="20.0">
                        <font>
                            <Font name="Arial Narrow" size="18.0" />
                        </font>
                    </Button>

                    <Button fx:id="btnSuppModif" mnemonicParsing="false" onAction="#modifSuppArbre" prefHeight="50.0" prefWidth="200.0" text="Supprimer / Modifier Arbre" textFill="#0a6d36"
                            translateY="20.0">
                        <font>
                            <Font name="Arial Narrow" size="18.0" />
                        </font>
                    </Button>
                </children>
            </HBox>

            <!-- Bouton Retour en bas -->
            <HBox alignment="CENTER" prefWidth="600.0" spacing="10.0">
                <children>
                    <Button fx:id="btnRetour" alignment="CENTER" maxHeight="30.0" maxWidth="130.0" minHeight="30.0" minWidth="130.0" onAction="#Retours" text="Retour" textFill="#ea053e">
                        <font>
                            <Font name="Arial Nova" size="14.0" />
                        </font>
                    </Button>
                </children>
            </HBox>
        </VBox>
    </children>
</AnchorPane>
