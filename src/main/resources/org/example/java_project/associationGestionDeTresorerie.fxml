<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.Association.TreasureManagementController">
    <!-- Top section: Title -->
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #4CAF50;">
            <Label text="Gestion de Trésorerie" style="-fx-font-size: 20; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Left section: Form for adding money -->
    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: lightgray; -fx-border-width: 1;" alignment="CENTER">
            <Label fx:id="soldeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Separator fx:id="separator" style="-fx-padding: 5; -fx-border-width: 1px;"/>



            <Button text="Activités" fx:id="openActivitiesInterfaceButton" prefWidth="150" onAction="#onActivitiesButtonClick"/>
            <Button text="Notifications" fx:id="openNotificationsInterfaceButton" prefWidth="150" onAction="#onNotificationsButtonClick"/>
            <Button text="Membres" fx:id="openMembersInterfaceButton" prefWidth="150" onAction="#onMembersButtonClick"/>
            <Button text="Donateurs" fx:id="openDonorsInterfaceButton" prefWidth="150" onAction="#onDonorsButtonClick"/>

            <Separator fx:id="separator2" style="-fx-padding: 5; -fx-border-width: 1px;"/>

            <Button text="Quitter"
                    onAction="#onExitButtonClick"
                    style="-fx-background-color: #f44336; -fx-text-fill: white;"
                    alignment="CENTER"
            />
        </VBox>
    </left>

    <!-- Center section: Financial operations table -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Opérations financières" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <TableView fx:id="financialTable" prefHeight="300">
                <columns>
                    <TableColumn text="Date" fx:id="dateColumn" prefWidth="100"/>
                    <TableColumn text="Montant (€)" fx:id="amountColumn" prefWidth="100"/>
                    <TableColumn text="Type" fx:id="typeColumn" prefWidth="150"/>
                    <TableColumn text="Description" fx:id="descriptionColumn" prefWidth="200"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Right section: Cotisation button -->
    <right>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f1f1f1; -fx-border-color: lightgray; -fx-border-width: 1;">
            <Label text="Cotisation Annuelle" style="-fx-font-size: 16; -fx-font-weight: bold;"/>

            <Button text="Payer la cotisation" fx:id="payCotisationButton" style="-fx-background-color: #FF6347; -fx-text-fill: white;"/>

            <Label text="Statut cotisation :" style="-fx-font-weight: bold;"/>
            <Label fx:id="cotisationStatusLabel" text="Non Payée" style="-fx-text-fill: red;"/>
        </VBox>
    </right>

    <!-- Bottom section: Footer -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #e0e0e0;">
            <Label text="© 2025 Association Application. Tous droits réservés."/>
        </HBox>
    </bottom>
</BorderPane>
