<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.Association.NotificationsController" styleClass="main-pane">
    <top>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #4CAF50;">
            <Label text="Notifications" style="-fx-font-size: 28; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: lightgray; -fx-border-width: 1;" alignment="CENTER">
            <Label fx:id="soldeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Separator fx:id="separator" style="-fx-padding: 5; -fx-border-width: 1px;"/>

            <Button text="Activités" fx:id="openActivitiesInterfaceButton" prefWidth="150" onAction="#onActivitiesButtonClick"/>
            <Button text="Membres" fx:id="openMembersInterfaceButton" prefWidth="150" onAction="#onMembersButtonClick"/>
            <Button text="Donateurs" fx:id="openDonorsInterfaceButton" prefWidth="150" onAction="#onDonorsButtonClick"/>
            <Button text="Trésorerie" fx:id="openTreasuryInterfaceButton" prefWidth="150" onAction="#onTreasuryButtonClick"/>
            <Button text="Votes" fx:id="openVotesInterfaceButton" prefWidth="150" onAction="#onVotesButtonClick"/>

            <Separator fx:id="separator2" style="-fx-padding: 5; -fx-border-width: 1px;"/>

            <Button text="Fermer"
                    onAction="#onBackButtonClick"
                    prefWidth="150" style="-fx-background-color: #2020FF; -fx-text-fill: white;"
                    alignment="CENTER"
            />
        </VBox>
    </left>

    <center>
        <TableView fx:id="notificationsTableView" prefHeight="400" style="-fx-background-color: white;">
            <columns>
                <TableColumn fx:id="dateColumn" text="Date" prefWidth="150"/>
                <TableColumn fx:id="timeColumn" text="Heure" prefWidth="100"/>
                <TableColumn fx:id="senderColumn" text="Émetteur" prefWidth="150"/>
                <TableColumn fx:id="statusColumn" text="Statut" prefWidth="70"/>
            </columns>
        </TableView>
    </center>

    <right>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f8f8f8;" alignment="CENTER">
            <Label text="Quick Stats" style="-fx-font-weight: bold;"/>
            <Label fx:id="nbActivitesLabel" style="-fx-font-size: 13;"/>
            <Separator fx:id="separator3" style="-fx-padding: 5; -fx-border-width: 1px;"/>
            <Label fx:id="nbNotificationsLabel" style="-fx-font-size: 13;"/>
            <Separator fx:id="separator4" style="-fx-padding: 5; -fx-border-width: 1px;"/>
            <Button fx:id="subscribeButton" text="Subscribe to Newsletter" style="-fx-font-size: 13;" onAction="#toggleSubscription"/>
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #e0e0e0;">
            <children>
                <Label text="© 2025 Sauvons les Arbres - Application. Tous droits réservés." />
            </children>
        </HBox>
    </bottom>
</BorderPane>