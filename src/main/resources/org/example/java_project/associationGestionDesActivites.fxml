<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.Controllers.Association.ActivitesController">
    <!-- Top section: Title -->
    <top>
        <HBox style="-fx-padding: 10; -fx-background-color: #4CAF50;">
            <Label text="Gestion des Activités" style="-fx-font-size: 20; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- Left section: Form for adding money -->
    <left>
        <VBox spacing="10" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: lightgray; -fx-border-width: 1;" alignment="CENTER">
            <Label fx:id="soldeLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Separator fx:id="separator" style="-fx-padding: 5; -fx-border-width: 1px;"/>

            <Button text="Notifications" fx:id="openNotificationsInterfaceButton" prefWidth="150" onAction="#onNotificationsButtonClick"/>
            <Button text="Membres" fx:id="openMembersInterfaceButton" prefWidth="150" onAction="#onMembersButtonClick"/>
            <Button text="Donateurs" fx:id="openDonorsInterfaceButton" prefWidth="150" onAction="#onDonorsButtonClick"/>
            <Button text="Trésorerie" fx:id="openTreasuryInterfaceButton" prefWidth="150" onAction="#onTreasuryButtonClick"/>
            <Button text="Votes" fx:id="openVotesInterfaceButton" prefWidth="150" onAction="#onVotesButtonClick"/>

            <Separator fx:id="separator3" style="-fx-padding: 5; -fx-border-width: 1px;"/>
            <Button text="Fermer"
                    onAction="#onBackButtonClick"
                    prefWidth="150" style="-fx-background-color: #2020FF; -fx-text-fill: white;"
                    alignment="CENTER"
            />
        </VBox>
    </left>

    <!-- Center section: Financial operations table -->
    <center>
        <VBox spacing="10" style="-fx-padding: 20;">
            <Label text="Opérations financières" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <TableView fx:id="activitiesTable" prefHeight="300">
                <columns>
                    <TableColumn text="Prévue pour le" fx:id="dateColumn" prefWidth="150" style="-fx-font-weight: bold;"/>
                    <TableColumn text="Type" fx:id="typeColumn" prefWidth="150" style="-fx-font-weight: bold;"/>
                    <TableColumn text="Statut" fx:id="statusColumn" prefWidth="150" style="-fx-font-weight: bold;"/>
                    <TableColumn text="Cost" fx:id="costColumn" prefWidth="150" style="-fx-font-weight: bold;"/>
                    <TableColumn text="Nom de l'arbre" fx:id="nameColumn" prefWidth="150" style="-fx-text-fill: #074994; -fx-font-weight: bold;"/>
                    <TableColumn text="Exécuteur" fx:id="executorColumn" prefWidth="150" style="-fx-font-weight: bold;"/>
                    <TableColumn text="Action" fx:id="actionColumn" prefWidth="100" style="-fx-font-weight: bold;"/>
                </columns>
            </TableView>
        </VBox>
    </center>

    <!-- Right section: Cotisation button -->
    <right>
        <VBox spacing="20" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f1f1f1; -fx-border-color: lightgray; -fx-border-width: 1;">
            <Label text="Quick Stats" style="-fx-font-weight: bold;"/>
            <Label fx:id="nbActivitesLabel" style="-fx-font-size: 13;"/>
            <Separator fx:id="separator1" style="-fx-padding: 5; -fx-border-width: 1px;"/>
            <Label fx:id="nbNotificationsLabel" style="-fx-font-size: 13;"/>
            <Separator fx:id="separator2" style="-fx-padding: 5; -fx-border-width: 1px;"/>
            <Button text="Ajouter une activité"
                    onAction="#onAddActivityButtonClick"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white;"
                    alignment="CENTER"
            />
        </VBox>
    </right>

    <bottom>
        <HBox alignment="CENTER" style="-fx-padding: 10; -fx-background-color: #e0e0e0;">
            <children>
                <Label text="© 2025 Sauvons les Arbres - Application. Tous droits réservés." />
            </children>
        </HBox>
    </bottom>
</BorderPane>
